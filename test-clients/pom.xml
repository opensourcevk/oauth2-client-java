                        <configuration>
                            <artifactId>fake-restclient-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.restclient</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-restclient-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>restclient</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.restclient.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.restclient.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- OpenAPI Generator with "webclient" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>openapi-generator.petstore.webclient</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>petstore-webclient-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.petstore.webclient</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/petstore-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/petstore-webclient-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>webclient</library>
                                <useJakartaEe>${use-jakarta-ee}</useJakartaEe>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.petstore.webclient.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.petstore.webclient.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openapi-generator.fake.webclient</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>fake-webclient-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.webclient</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-webclient-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>webclient</library>
                                <useJakartaEe>${use-jakarta-ee}</useJakartaEe>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.webclient.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.webclient.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- OpenAPI Generator with "apache-httpclient" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>openapi-generator.petstore.apache</id>
                        <goals>
                            <goal>generate</goal>
