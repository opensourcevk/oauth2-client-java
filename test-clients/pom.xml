        </dependency>
        <dependency>
            <groupId>io.github.openfeign</groupId>
            <artifactId>feign-okhttp</artifactId>
            <version>${feign-version}</version>
        </dependency>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- OpenAPI Generator with "restclient" -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${spring-web-version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>${jackson-version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson-version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson-databind-version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.jakarta.rs</groupId>
            <artifactId>jackson-jakarta-rs-json-provider</artifactId>
            <version>${jackson-version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
            <version>${jackson-version}</version>
        </dependency>
        <dependency>
            <groupId>jakarta.annotation</groupId>
            <artifactId>jakarta.annotation-api</artifactId>
            <version>${jakarta-annotation-version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- OpenAPI Generator with "webclient" -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
            <version>${spring-boot-version}</version>
        </dependency>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <!-- OpenAPI Generator with "apache-httpclient" -->
        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <dependency>
            <groupId>org.apache.httpcomponents.client5</groupId>
            <artifactId>httpclient5</artifactId>
            <version>${httpclient-version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <!-- Ensure compilation targets Java 17 regardless of runner JDK -->
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.14.1</version>
                <configuration>
                    <release>17</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>${openapi.generator.version}</version>
                <configuration>
                    <generatorName>java</generatorName>
                    <generateApiTests>false</generateApiTests>
                    <generateModelTests>false</generateModelTests>
                    <skipIfSpecIsUnchanged>true</skipIfSpecIsUnchanged>
                </configuration>
                <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                <!-- OpenAPI Generator with "okhttp-gson" -->
                <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                <executions>
                    <execution>
                        <id>openapi-generator.petstore.okhttp</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>petstore-okhttp-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.petstore.okhttp</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/petstore-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/petstore-okhttp-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>okhttp-gson</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.petstore.okhttp.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.petstore.okhttp.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openapi-generator.fake.okhttp</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>fake-okhttp-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.okhttp</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-okhttp-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>okhttp-gson</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.okhttp.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.okhttp.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- OpenAPI Generator with "native" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>openapi-generator.petstore.java</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>petstore-java-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.petstore.java</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/petstore-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/petstore-java-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>native</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.petstore.java.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.petstore.java.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openapi-generator.fake.java</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>fake-java-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.java</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-java-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>native</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.java.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.java.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- OpenAPI Generator with "feign" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>openapi-generator.petstore.feign</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>petstore-feign-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.petstore.feign</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/petstore-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/petstore-feign-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>feign</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.petstore.feign.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.petstore.feign.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <execution>
                        <id>openapi-generator.fake.feign</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>fake-feign-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.feign</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-feign-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>feign</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.feign.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.feign.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <!-- OpenAPI Generator with "restclient" -->
                    <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
                    <execution>
                        <id>openapi-generator.petstore.restclient</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>petstore-restclient-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.petstore.restclient</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/petstore-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/petstore-restclient-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>restclient</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.petstore.restclient.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.petstore.restclient.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
