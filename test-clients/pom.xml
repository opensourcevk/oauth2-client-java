                    <execution>
                        <id>openapi-generator.fake.apache</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <artifactId>fake-apache-openapi-generator-client</artifactId>
                            <groupId>com.mastercard.developer.test.openapi-generator.fake.apache</groupId>
                            <artifactVersion>${project.version}</artifactVersion>
                            <inputSpec>${project.basedir}/src/test/resources/openapi/fake-api.yaml</inputSpec>
                            <output>
                                ${project.build.directory}/generated-sources/fake-apache-openapi-generator-client
                            </output>
                            <configOptions>
                                <library>apache-httpclient</library>
                                <apiPackage>com.mastercard.developer.test.openapi-generator.fake.apache.api
                                </apiPackage>
                                <modelPackage>com.mastercard.developer.test.openapi-generator.fake.apache.model
                                </modelPackage>
                                <sourceFolder>src/gen/java/main</sourceFolder>
                            </configOptions>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <version>3.1.4</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>3.1.4</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>